---
import BaseLayout from "@/layouts/BaseLayout.astro";
import styles from "./contact-us.scss?inline";

import ContactPage from "../modules/Contact/ContactPage.astro";
import Seo from "@/components/Seo.astro";
---

<BaseLayout noFooter>
  <Seo
    slot="seo"
    title="Contact Us | Flux Fusion"
    description=""
    og={{
      image: "/assets/og/contact-us.webp",
      imageAlt: "Flux Fusion Open Graph Banner",
    }}
  />
  <ContactPage />

  <style slot="header" is:inline set:html={styles}></style>

  <Fragment slot="footer">
    <script src="@/scripts/header/nav.js"></script>
    <script src="@/scripts/contact/index.js"></script>
  </Fragment>
</BaseLayout>
