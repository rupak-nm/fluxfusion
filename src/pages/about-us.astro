---
import BaseLayout from "@/layouts/BaseLayout.astro";
import styles from "./about-us.scss?inline";

import AboutHero from "../modules/About/AboutHero.astro";
import Mission from "../modules/About/Mission.astro";
import OurTeam from "../modules/About/OurTeam.astro";
import Seo from "@/components/Seo.astro";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="About Us | Flux Fusion"
    description=""
    og={{
      image: "/assets/og/about-us.webp",
      imageAlt: "Flux Fusion Open Graph Banner",
    }}
  />
  <AboutHero />

  <Mission />

  <OurTeam />

  <style slot="header" is:inline set:html={styles}></style>

  <Fragment slot="footer">
    <script src="@/scripts/header/nav.js"></script>
    <script src="@/scripts/newsletter/index.js"></script>
  </Fragment>
</BaseLayout>
