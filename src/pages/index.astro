---
import BaseLayout from "@/layouts/BaseLayout.astro";
import styles from "./index.scss?inline";

import HomeHero from "@/modules/Home/HomeHero.astro";
import WhyChooseUs from "@/modules/Home/WhyChooseUs.astro";
import TechInsights from "@/modules/Home/TechInsights.astro";
import Seo from "@/components/Seo.astro";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="FluxFusion"
    description=""
    og={{
      image: "/assets/og/home.webp",
      imageAlt: "FluxFusion Open Graph Banner",
    }}
  />
  <HomeHero />

  <WhyChooseUs />

  <TechInsights />

  <style slot="header" is:inline set:html={styles}></style>

  <Fragment slot="footer">
    <script src="@/scripts/header/nav.js"></script>
    <script src="@/scripts/newsletter/index.js"></script>
    <script src="@/scripts/slider/slider.js"></script>
  </Fragment>
</BaseLayout>
