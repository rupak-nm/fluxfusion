---
import Container from "@/components/Container/Container.astro";

const images = [
  {
    src: "/assets/team/1.png",
    alt: "Team member 1",
  },
  {
    src: "/assets/team/2.png",
    alt: "Team member 2",
  },
  {
    src: "/assets/team/3.png",
    alt: "Team member 3",
  },
  {
    src: "/assets/team/4.png",
    alt: "Team member 4",
  },
  {
    src: "/assets/team/5.png",
    alt: "Team member 5",
  },
  {
    src: "/assets/team/6.png",
    alt: "Team member 6",
  },
  {
    src: "/assets/team/7.png",
    alt: "Team member 7",
  },
  {
    src: "/assets/team/8.png",
    alt: "Team member 8",
  },
];
---

<Container outerClass="about our team">
  <div class="text">
    <h2 class="title">Our Team</h2>
    <p class="description">
      Comprised of cybersecurity experts, AI enthusiasts, and technology
      visionaries, our team is committed to delivering unparalleled security
      solutions tailored to your unique needs.
    </p>
  </div>

  <div class="team">
    {
      images.map((image) => (
        <div class="card">
          <img src={image.src} alt={image.alt} />
        </div>
      ))
    }
  </div>
</Container>
